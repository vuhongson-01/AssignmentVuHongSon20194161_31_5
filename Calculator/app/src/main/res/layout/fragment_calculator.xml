<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/darkGrey"
    tools:context=".fragment.CalculatorFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workingTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="30dp"
                android:text=""
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="30dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="45sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_CE"
                    android:text="CE" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/red"
                    android:id="@+id/btn_C"
                    android:text="C" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_BS"
                    android:text="BS" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/orange"
                    android:id="@+id/btn_divideSign"
                    android:text="/" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_7"
                    android:text="7" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_8"
                    android:text="8" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_9"
                    android:text="9" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/orange"
                    android:id="@+id/btn_multipicationSign"
                    android:text="x" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_4"
                    android:text="4" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_5"
                    android:text="5" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_6"
                    android:text="6" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/orange"
                    android:id="@+id/btn_subSign"
                    android:text="-" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:text="1" />
                <Button
                    android:id="@+id/btn_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:text="2" />
                <Button
                    android:id="@+id/btn_3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:text="3" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:id="@+id/btn_plusSign"
                    android:textColor="@color/orange"
                    android:text="+" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_reverseSign"
                    android:text="+/-" />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/calcButtonTextSize"
                    android:background="@null"
                    android:textColor="@color/white"
                    android:id="@+id/btn_0"
                    android:text="0" />


                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@color/orange"
                    android:id="@+id/btn_equalSign"
                    android:text="="
                    android:textColor="@color/white"
                    android:textSize="@dimen/calcButtonTextSize"/>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>